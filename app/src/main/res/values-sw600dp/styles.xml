<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:paddingTop">@dimen/margin_15</item>
        <item name="android:paddingBottom">@dimen/margin_15</item>
        <item name="android:paddingLeft">@dimen/margin_5</item>
        <item name="android:paddingRight">@dimen/margin_5</item>
        <item name="android:textSize">@dimen/normalFontSize</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@string/font_regular</item>
    </style>

    <style name="BtnStyle">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textSize">@dimen/btnFontSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">55dp</item>
    </style>

    <style name="BtnStyleWhite">
        <item name="android:fontFamily">@string/font_regular</item>
        <item name="android:textSize">@dimen/xxxxfontSize</item>
        <item name="android:background">@color/btnBgCancelColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:height">55dp</item>
    </style>


    <style name="fontStyle">
        <item name="android:fontFamily">@string/font_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="TextLabel" parent="ThemeOverlay.AppCompat.Light">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/edthintTextColor</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorActivatedHighlight">@color/colorBlack</item>
    </style>

    <!--date picker style-->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- CheckBox -->
    <style name="SampleTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textColorSecondary">@color/colorLightGray</item>
    </style>


</resources>
