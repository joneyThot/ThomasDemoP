<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@drawable/background_shadow"
    android:orientation="vertical"
    android:padding="@dimen/margin_5">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.rogi.View.TextViewPlus
            android:id="@+id/headerText"
            style="@style/fontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="Note"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/xxFontSize"
            app:customFont="@string/font_regular" />

        <ImageView
            android:id="@+id/addItemView"
            android:layout_width="@dimen/image_edit_add"
            android:layout_height="@dimen/image_edit_add"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_5"
            android:src="@mipmap/plush_icon" />

    </RelativeLayout>

    <com.rogi.View.TextViewPlus
        android:id="@+id/txtNoProjectPhase"
        style="@style/fontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/margin_5"
        app:customFont="@string/font_regular"
        android:text="No project phase(s) available"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/xxxxfontSize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/projectRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
