<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_shadow"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/image_close"
            android:layout_height="@dimen/image_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:src="@mipmap/clos_popup_icon" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/edtTaskDueDate"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/calendar_icon"
                android:focusable="false"
                android:hint="Due Date" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:theme="@style/TextLabel">

            <EditText
                android:id="@+id/edtTaskDueTime"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/time"
                android:focusable="false"
                android:hint="Due Time" />


        </android.support.design.widget.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.rogi.View.TextViewPlus
            android:id="@+id/SaveBTN"
            style="@style/BtnStyle"
            android:layout_width="@dimen/btn_add_size"
            android:layout_height="@dimen/btn_cancel_size"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Save"
            android:textSize="@dimen/xxxxfontSize"
            app:customFont="@string/font_regular" />


        <com.rogi.View.TextViewPlus
            android:id="@+id/cancelBTN"
            style="@style/BtnStyleWhite"
            android:layout_width="@dimen/btn_add_size"
            android:layout_height="@dimen/btn_cancel_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Cancel"
            app:customFont="@string/font_regular" />


    </LinearLayout>


</LinearLayout>
