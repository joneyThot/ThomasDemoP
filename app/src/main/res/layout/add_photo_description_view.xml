<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:background="@drawable/background_shadow"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/image_close"
            android:layout_height="@dimen/image_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10"
            android:src="@mipmap/clos_popup_icon" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edtDescription"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Add Description"
        android:imeActionLabel="Done"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="3" />


    <LinearLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <com.rogi.View.TextViewPlus
            app:customFont="@string/font_regular"
            android:gravity="center"
            android:id="@+id/addDescBTN"
            style="@style/BtnStyle"
            android:layout_width="@dimen/btn_add_size"
            android:layout_height="@dimen/btn_cancel_size"
            android:layout_alignParentRight="true"
            android:text="Add"
            android:textSize="@dimen/xxxxfontSize" />


        <com.rogi.View.TextViewPlus
            app:customFont="@string/font_regular"
            android:gravity="center"
            android:id="@+id/resetBTN"
            style="@style/BtnStyleWhite"
            android:layout_width="@dimen/btn_add_size"
            android:layout_height="@dimen/btn_cancel_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="Cancel" />


    </LinearLayout>

</LinearLayout>
