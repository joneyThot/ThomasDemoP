<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5"
    android:background="@drawable/background_shadow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_5"
    android:paddingLeft="@dimen/margin_5"
    android:paddingTop="@dimen/margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.rogi.View.TextViewPlus
                style="@style/fontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Assigned By"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/xxFontSize"
                app:customFont="@string/font_regular" />

            <com.rogi.View.TextViewPlus
                android:id="@+id/assignCompnayText"
                style="@style/fontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/text2Color"
                android:textSize="@dimen/xxxFontSize"
                app:customFont="@string/font_regular" />

            <com.rogi.View.TextViewPlus
                android:id="@+id/assignNameText"
                style="@style/fontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/text2Color"
                android:textSize="@dimen/xxxFontSize"
                app:customFont="@string/font_regular" />

            <com.rogi.View.TextViewPlus
                android:id="@+id/assigneMailText"
                style="@style/fontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/text2Color"
                android:textSize="@dimen/xxxFontSize"
                app:customFont="@string/font_regular" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/assignContactLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <com.rogi.View.TextViewPlus
                android:id="@+id/assignContactText"
                style="@style/fontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="+1-202-505-0107"
                android:textColor="@color/numberFontColor"
                android:textSize="@dimen/FontSize15"
                app:customFont="@string/font_regular" />

            <ImageView
                android:layout_width="@dimen/image_close"
                android:layout_height="@dimen/image_close"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:src="@mipmap/call_icon_fill" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>
